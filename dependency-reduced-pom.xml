<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.neomechanical</groupId>
    <artifactId>NeoPerformance-parent</artifactId>
    <packaging>pom</packaging>
    <name>NeoPerformance</name>
    <version>1.13</version>
    <build>
        <resources>
            <resource>
                <filtering>true</filtering>
                <directory>api/src/main/resources</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
          <configuration>
              <relocations>
                  <relocation>
                      <pattern>org.bstats</pattern>
                      <shadedPattern>com.neomechanical.neoperformance</shadedPattern>
                  </relocation>
                  <relocation>
                      <pattern>com.neomechanical.neoconfig</pattern>
                      <shadedPattern>com.neomechanical.neoperformance.neoconfig</shadedPattern>
                  </relocation>
                  <relocation>
                      <pattern>com.neomechanical.neoutils</pattern>
                      <shadedPattern>com.neomechanical.neoperformance.neoutils</shadedPattern>
                  </relocation>
              </relocations>
              <artifactSet>
                  <includes>
                      <include>com.sun.mail:javax.mail</include>
                      <include>javax.activation:activation</include>
                      <include>org.bstats</include>
                      <include>com.neomechanical:NeoUtils</include>
                      <include>com.neomechanical:NeoConfig</include>
                  </includes>
              </artifactSet>
          </configuration>
      </plugin>
        </plugins>
    </build>
    <modules>
        <module>api</module>
        <module>LEGACY</module>
        <module>NONLEGACY</module>
        <module>abstraction</module>
    </modules>
    <properties>
        <java.version>8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>
